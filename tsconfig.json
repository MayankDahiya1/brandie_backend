{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "ES2022",
    "lib": ["ES2022"],

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": false
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
